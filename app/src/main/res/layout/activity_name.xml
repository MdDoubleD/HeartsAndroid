<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".activities.NameActivity">

    <TextView
        android:id="@+id/welcome_to_hearts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textStyle="bold"
        android:textSize="30sp"
        android:text="Welcome To Hearts!" />

    <TextView
        android:id="@+id/your_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Enter Your Player Name:" />

    <EditText
        android:id="@+id/user_name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:hint="Player Name" />

    <TextView
        android:id="@+id/computer_1_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Enter First Computer Name:" />

    <EditText
        android:id="@+id/computer1_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:hint="Computer 1" />

    <TextView
        android:id="@+id/computer_2_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Enter Second Computer Name:" />

    <EditText
        android:id="@+id/computer2_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:hint="Computer 2" />

    <TextView
        android:id="@+id/computer_3_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Enter Third Computer Name:" />

    <EditText
        android:id="@+id/computer3_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:hint="Computer 3" />

    <Button
        android:id="@+id/start_hearts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:onClick="clickedStartHearts"
        android:text="Start Hearts!" />

</LinearLayout>
